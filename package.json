{
  "private": true,
  "exports": false,
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn run build",
    "build-clean": "make clean",
    "build": "make",
    "exports:polyfill": "lerna exec -- polyfill-exports",
    "exports:clear": "lerna exec -- polyfill-exports --clear",
    "lint": "eslint --ext .js ./packages/*/src",
    "lint:fix": "yarn run lint -- --fix",
    "prettier": "prettier --write packages/**/*.js flow-typed/*.js",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint",
      "post-commit": "yarn build"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.8.0",
    "@babel/core": "^7.8.0",
    "@babel/node": "^7.8.0",
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.0",
    "@babel/plugin-proposal-optional-chaining": "^7.8.0",
    "@babel/plugin-transform-react-jsx": "^7.8.0",
    "@babel/preset-env": "^7.8.0",
    "@babel/preset-flow": "^7.8.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "babel-plugin-dev-expression": "^0.2.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "flow-bin": "^0.124.0",
    "husky": "^3.0.0",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "moxy": "0.1.0-9",
    "nock": "^12.0.0",
    "polyfill-exports": "^0.2.0-beta.1",
    "prettier": "^2.0.5"
  },
  "workspaces": [
    "packages/*"
  ]
}
