{
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn run build",
    "build-clean": "rm -rf ./packages/*/lib",
    "build": "yarn build-clean && node ./scripts/build",
    "lint": "eslint --ext .json --ext .js ./packages/*",
    "lint:fix": "yarn run lint -- --fix",
    "prettier": "prettier --write packages/**/*.js scripts/*.js types/*.js flow-typed/*.js",
    "test": "jest",
    "tunnel": "ssh -o ServerAliveInterval=60 -R machinat-dev-$USER:80:localhost:${PORT:-3000} serveo.net"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-flowtype": "^3.10.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "flow-bin": "^0.93.0",
    "jest": "^23.6.0",
    "lerna": "^2.9.0",
    "moxy": "https://github.com/lrills/moxy/releases/download/v0.1.0-8/moxy.tar.gz",
    "nock": "^10.0.3",
    "nodemon": "^1.18.4",
    "prettier": "^1.18.2",
    "regenerator-runtime": "^0.11.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.spec.js?(x)"
    ],
    "globals": {
      "__DEV__": true
    },
    "moduleNameMapper": {
      "^(machinat-?[^\/]*)$": "<rootDir>/packages/$1/src"
    },
    "setupFiles": [
      "<rootDir>/node_modules/moxy/lib/extends/jest.js"
    ]
  },
  "dependencies": {}
}
