{
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn run build",
    "build-clean": "rm -rf ./packages/*/lib",
    "build": "yarn build-clean && node ./scripts/build",
    "lint": "eslint --ext .json --ext .js ./packages/*",
    "lint:fix": "yarn run lint -- --fix",
    "prettier": "prettier --write packages/**/*.js scripts/*.js types/*.js flow-typed/*.js",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint",
      "post-commit": "yarn build"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-transform-react-jsx": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^24.8.0",
    "babel-plugin-dev-expression": "^0.2.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-flowtype": "3.10.2",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "flow-bin": "^0.93.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "moxy": "0.1.0-8",
    "nock": "^10.0.3",
    "prettier": "^1.18.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
