{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "Machinat.createElement",
    "jsxFragmentFactory": "Machinat.Fragment",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@machinat/auth": ["packages/machinat-auth/src/index.js"],
      "@machinat/auth/*": ["packages/machinat-auth/src/*"],
      "@machinat/core": ["packages/machinat-core/src/index.js"],
      "@machinat/core/*": ["packages/machinat-core/src/*"],
      "@machinat/http": ["packages/machinat-http/src/index.js"],
      "@machinat/http/*": ["packages/machinat-http/src/*"]
    }
  }
}
