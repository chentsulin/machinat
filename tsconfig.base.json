{
  "compilerOptions": {
    "lib": ["es2019"],
    "module": "commonjs",
    "target": "es2017",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "Machinat.createElement",
    "jsxFragmentFactory": "Machinat.Fragment",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "types": ["node"]
  }
}
