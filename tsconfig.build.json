{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "typedocOptions": {
    "name": "Machinat",
    "mode": "modules",
    "out": "api",
    "readme": "./README.md",
    "exclude": [
      "**/jest-snapshot-serializer/**",
      "**/__tests__/*",
      "**/__mocks__/*"
    ],
    "stripInternal": true,
    "excludePrivate": true,
    "ignoreCompilerErrors": true,
    "external-modulemap": ".*packages/([^/]+)/.*",
    "categoryOrder": [
      "Component",
      "Provider",
      "Interface",
      "Container",
      "Props"
    ]
  }
}
